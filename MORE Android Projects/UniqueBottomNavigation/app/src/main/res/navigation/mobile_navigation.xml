<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeNav">

    <fragment
        android:id="@+id/homeNav"
        android:name="com.first.dice.uniquebottomnavigation.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/DashboardNav"
        android:name="com.first.dice.uniquebottomnavigation.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/notificationNav"
        android:name="com.first.dice.uniquebottomnavigation.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/menu_fragment"
        android:name="com.first.dice.uniquebottomnavigation.menu_fragment"
        android:label="fragment_menu_fragment"
        tools:layout="@layout/fragment_menu_fragment" />
</navigation>